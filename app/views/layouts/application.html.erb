<!DOCTYPE html>
<html>
  <head>
    <title>Raddit</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <%-# First alert message -%>
    <% flash.each do |name, msg| %>
      <%= content_tag(:div, msg, class: "alert alert-#{name}") %>
    <% end %>
    <%-# Second alert message. Go to links/index.html.erb -%>

    <% if user_signed_in? %>
      <ul>
        <li><%= link_to 'Crear nuevo enlace', new_link_path %></li>
        <li><%= link_to 'Mi cuenta', edit_user_registration_path %></li>
        <li><%= link_to 'Finalizar sesión', destroy_user_session_path, :method => :delete %></li>
      </ul>
    <% else %>
      <ul>
        <li><%= link_to '¡Regístrate!', new_user_registration_path %></li>
        <li><%= link_to 'Iniciar sesión', new_user_session_path %></li>
      </ul>
    <% end %>

    <%= yield %>
  </body>
</html>
